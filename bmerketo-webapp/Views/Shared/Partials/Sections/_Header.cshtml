 <header>
    <div class="container">
        <img src="~/imgs/placeholders/Logo.svg" alt="bMerketo company">
        <menu>
            <nav id="menu" class="menu-links d-none d-lg-block">
                <a class="link" asp-controller="home" asp-action="index">HOME</a>
                <a class="link" asp-controller="product" asp-action="products">PRODUCTS</a>
                <a class="link" asp-controller="contact" asp-action="index">CONTACT</a>
                <a class="link" asp-controller="admin" asp-action="index">admin</a>
            </nav>
            <nav class="menu-icons">
                <a class="link" asp-controller="product" asp-action="search"><i class="fa-solid fa-search"></i></a>
                 @if (signInManager.IsSignedIn(User))
                {
                    <a class="link" asp-controller="account" asp-action="Index">@User.Identity?.Name</a>
                    <a class="link" asp-controller="account" asp-action="signout">Logout</a>
                }
                else
                {
                    <a class="link" asp-controller="account" asp-action="login">Login</a>
                    <a class="link" asp-controller="account" asp-action="register">Register</a>
                }
                <a class="link" asp-controller="cart" asp-action="index"><i class="fa-solid fa-cart-shopping"></i></a>
            </nav>
        </menu>
        <button class="toggle" data-option="toggle"><i id="icon" class="fa-solid fa-bars" data-target="#menu"></i></button>
    </div>
</header>