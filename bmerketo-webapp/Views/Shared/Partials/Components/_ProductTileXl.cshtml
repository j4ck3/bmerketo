@model ItemViewModel
<div class="col d-flex justify-content-center mb-4">
    <div class="card">
        <div class="product-tile-xl-body">
            <a class="model-item-body-big" asp-controller="product" asp-route-id="@Model.Id">
                @if (Model.ImageName != null)
                {
                    if (Model.ImageName.Contains("/"))
                    {
                        <img class="model-item-img" src="@Model.ImageName" alt="@Model.Title" />
                    }
                    else
                    {
                        <img class="model-item-img" src="@Url.Content("~/imgs/products/" + Model.ImageName)" alt="@Model.Title" />
                    }
                }
            </a>
            <div class="d-flex justify-content-between align-items-end m-3">
                <div>
                    <h4 class="product-tile-title">@Model.Title</h4>
                    <span class="text-decoration-line-through">$@Model.OldPrice</span>
                    <span>$@Model.Price</span>
                </div>
                <a class="link" asp-controller="Products" asp-action="Index"><i class="fa-solid fa-cart-plus"></i></a>
            </div>
        </div>
    </div>
</div>