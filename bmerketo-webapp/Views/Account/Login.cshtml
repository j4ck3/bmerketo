@model LoginViewModel
<section class="contact-form">
    <div class="container">
        <div class="title mb-3">Please Login to Your Account</div>
        <form id="register-form" method="POST" novalidate>
            <div class="email form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" id="email">
                <span asp-validation-for="Email" class="error"></span>
            </div>
            <div class="password form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" id="password">
                <span asp-validation-for="Password" class="error"></span>
            </div>
            <div class="terms form-checkbox-group">
                <label class="custom-checkbox">
                    Please keep me logged In
                    <input type="checkbox" checked="checked">
                    <span class="checkmark"></span>
                </label>
            </div>
            <button class="btn-theme">Submit</button>
        </form>
    </div>
</section>